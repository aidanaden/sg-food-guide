---
import Layout from '../layouts/Layout.astro';
import Button from '../components/ui/Button.astro';
import Checkbox from '../components/ui/Checkbox.astro';
---

<Layout
  title="Adventure Research - Horse Riding and Dirt Biking"
  description="Research horse riding and dirt biking options by city and country."
  canonicalPath="/adventure"
>
  <header class="relative overflow-hidden border-b border-warm-800">
    <div class="absolute inset-0 bg-gradient-to-br from-warm-950 via-surface to-warm-900 opacity-85"></div>
    <div class="relative mx-auto max-w-5xl px-4 py-14 sm:py-18">
      <a href="/" class="inline-flex items-center gap-2 text-sm text-ink-muted hover:text-ink transition-colors">
        <span class="i-ph-arrow-left" />
        Back to food guide
      </a>
      <div class="mt-5">
        <p class="text-xs uppercase tracking-widest text-flame-400/80">Activity Research</p>
        <h1 class="mt-2 font-display text-4xl sm:text-5xl tracking-tight text-ink">
          Find horse riding and dirt biking options anywhere
        </h1>
        <p class="mt-3 max-w-2xl text-base sm:text-lg text-ink-muted leading-relaxed">
          Enter a city and country to discover activity options without relying on a fixed KL-only list.
        </p>
      </div>
    </div>
  </header>

  <main class="mx-auto max-w-5xl px-4 py-8 sm:py-10">
    <section class="rounded-2xl border border-warm-700/60 bg-surface-raised p-4 sm:p-6">
      <form id="adventure-search-form">
        <fieldset id="adventure-search-fieldset" class="space-y-5">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <label class="flex flex-col gap-2">
              <span class="text-xs text-ink-faint uppercase tracking-wide">City</span>
              <input
                id="adventure-city"
                type="text"
                value="Kuala Lumpur"
                placeholder="Kuala Lumpur"
                class="min-h-11 rounded-lg border border-warm-700/50 bg-surface-card px-3 py-2 text-sm text-ink placeholder:text-ink-faint focus:border-flame-500/50 focus:outline-none focus:ring-1 focus:ring-flame-500/30 transition-colors"
              />
            </label>
            <label class="flex flex-col gap-2">
              <span class="text-xs text-ink-faint uppercase tracking-wide">Country</span>
              <input
                id="adventure-country"
                type="text"
                value="Malaysia"
                placeholder="Malaysia"
                class="min-h-11 rounded-lg border border-warm-700/50 bg-surface-card px-3 py-2 text-sm text-ink placeholder:text-ink-faint focus:border-flame-500/50 focus:outline-none focus:ring-1 focus:ring-flame-500/30 transition-colors"
              />
            </label>
          </div>

          <div class="flex flex-wrap items-center gap-4">
            <Checkbox id="adventure-horse-riding" checked class="text-sm">
              <span class="i-ph-horse text-sm text-jade-400" />
              Horse riding
            </Checkbox>
            <Checkbox id="adventure-dirt-biking" checked class="text-sm">
              <span class="i-ph-motorcycle text-sm text-flame-400" />
              Dirt biking
            </Checkbox>
          </div>

          <div class="flex flex-wrap items-center gap-3">
            <label class="inline-flex items-center gap-2">
              <span class="text-xs text-ink-faint uppercase tracking-wide">Max results per activity</span>
              <select
                id="adventure-limit"
                class="min-h-11 rounded-lg border border-warm-700/50 bg-surface-card px-3 py-2 text-sm text-ink focus:border-flame-500/50 focus:outline-none focus:ring-1 focus:ring-flame-500/30 transition-colors"
              >
                <option value="4">4</option>
                <option value="6">6</option>
                <option value="8" selected>8</option>
                <option value="10">10</option>
                <option value="12">12</option>
              </select>
            </label>
            <Button type="submit">
              <span class="i-ph-binoculars text-sm" />
              Research options
            </Button>
          </div>
        </fieldset>
      </form>
    </section>

    <p id="adventure-status" class="hidden mt-4 text-sm" aria-live="polite"></p>
    <ul id="adventure-warnings" class="hidden mt-3 space-y-1"></ul>
    <div id="adventure-results" class="mt-5 grid grid-cols-1 gap-4"></div>
  </main>
</Layout>

<script>
  import { initAdventureSearch } from '../scripts/adventure-search';
  initAdventureSearch();
</script>
