---
interface Props {
  icon?: string;
  class?: string;
  [key: string]: any;
}

const { icon, class: className, ...rest } = Astro.props;
---

<div class="relative">
  {icon && (
    <span class:list={[icon, 'absolute left-3 top-1/2 -translate-y-1/2 text-ink-faint text-sm']} />
  )}
  <input
    class:list={[
      'w-full rounded-lg border border-warm-700/50 bg-surface-raised py-3 text-sm text-ink min-h-11',
      'placeholder:text-ink-faint focus:border-flame-500/50 focus:outline-none focus:ring-1 focus:ring-flame-500/30 transition-colors',
      icon ? 'pl-10 pr-4' : 'px-4',
      className,
    ]}
    {...rest}
  />
</div>
