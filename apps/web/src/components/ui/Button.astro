---
interface Props {
  variant?: 'primary' | 'secondary' | 'ghost' | 'outline';
  size?: 'sm' | 'md' | 'lg';
  href?: string;
  class?: string;
  [key: string]: any;
}

const { variant = 'primary', size = 'md', href, class: className, ...rest } = Astro.props;
const Tag = href ? 'a' : 'button';

const variants: Record<string, string> = {
  primary: 'bg-flame-500 text-white hover:bg-flame-600 border-flame-600/50',
  secondary: 'bg-surface-raised text-ink hover:bg-surface-overlay border-warm-700/50',
  ghost: 'hover:bg-surface-raised text-ink-muted hover:text-ink border-transparent',
  outline: 'border-warm-700/50 text-ink hover:border-flame-500/40 hover:text-flame-400 bg-surface-raised',
};

const sizes: Record<string, string> = {
  sm: 'px-3 py-2 text-xs gap-1.5 min-h-11',
  md: 'px-4 py-2.5 text-sm gap-2 min-h-11',
  lg: 'px-6 py-3 text-base gap-2.5',
};
---

<Tag
  href={href}
  class:list={[
    'inline-flex items-center justify-center rounded-lg font-medium border transition-colors cursor-pointer',
    variants[variant],
    sizes[size],
    className,
  ]}
  {...rest}
>
  <slot />
</Tag>
