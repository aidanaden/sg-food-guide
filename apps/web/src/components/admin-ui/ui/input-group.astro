---
import type { HTMLAttributes } from "astro/types";
import { cn } from "../utils";
const { class: className, ...attrs } = Astro.props as HTMLAttributes<"div">;
---

<div
  data-slot="input-group"
  class={cn(
    "border-border-input flex min-h-8 min-w-0 items-center gap-1 rounded-lg border bg-transparent px-2.5 py-1",
    className,
  )}
  {...attrs}
>
  <slot />
</div>
