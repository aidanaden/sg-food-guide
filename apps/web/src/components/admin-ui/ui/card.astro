---
import type { HTMLAttributes } from "astro/types";
import { cn } from "../utils";

interface Props extends HTMLAttributes<"div"> {
  size?: "default" | "sm";
}

const { size = "default", class: className, ...attrs } = Astro.props;
---

<div
  data-slot="card"
  data-size={size}
  class={cn(
    "bg-surface text-foreground flex flex-col gap-4 overflow-hidden rounded-xl py-4 text-sm ring-1 ring-foreground/10",
    size === "sm" ? "gap-3 py-3" : undefined,
    className,
  )}
  {...attrs}
>
  <slot />
</div>
