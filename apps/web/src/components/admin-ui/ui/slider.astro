---
import { cn } from "../utils";

interface Props {
  class?: string;
  min?: number;
  max?: number;
  step?: number;
  value?: number;
  [key: string]: any;
}

const { class: className, min = 0, max = 100, step = 1, value, ...attrs } = Astro.props as Props;
---

<input
  type="range"
  data-slot="slider"
  min={min}
  max={max}
  step={step}
  value={value}
  class={cn("accent-primary w-full", className)}
  {...attrs}
/>
