---
import ResponsiveDialogBase from "../../../ui/ResponsiveDialog.astro";

interface Props {
  id?: string;
  class?: string;
  [key: string]: any;
}

const { id, class: className, ...attrs } = Astro.props as Props;
const dialogId = id ?? `admin-responsive-dialog-${Math.random().toString(36).slice(2, 10)}`;
---

<ResponsiveDialogBase id={dialogId} class={className} {...attrs}>
  <slot name="trigger" slot="trigger" />
  <slot />
</ResponsiveDialogBase>
