---
const { class: className } = Astro.props;
const id = `client-only-${Math.random().toString(36).slice(2, 10)}`;
---

<div id={id} data-slot="client-only" class={className} hidden>
  <slot />
</div>

<noscript>
  <slot name="fallback" />
</noscript>

<script is:inline define:vars={{ id }}>
  const el = document.getElementById(id);
  if (el != null) {
    el.hidden = false;
  }
</script>
