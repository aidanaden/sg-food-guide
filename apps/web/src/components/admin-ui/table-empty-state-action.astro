---
import type { HTMLAttributes } from "astro/types";
import { cn } from "./utils";
const { class: className, ...attrs } = Astro.props as HTMLAttributes<"div">;
---

<div data-slot="table-empty-state-action" class={cn("mt-3 text-sm", className)} {...attrs}>
  <slot />
</div>

<style>
  [data-slot="table-empty-state-action"] a,
  [data-slot="table-empty-state-action"] button {
    color: var(--color-primary);
  }

  [data-slot="table-empty-state-action"] a:hover,
  [data-slot="table-empty-state-action"] button:hover {
    text-decoration: underline;
  }
</style>
