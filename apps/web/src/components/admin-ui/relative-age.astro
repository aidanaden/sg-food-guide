---
import { cn, formatRelativeAge } from "./utils";

interface Props {
  value: number | Date | string | null | undefined;
  tooltip?: string;
  class?: string;
  suffix?: string;
}

const { value, tooltip, class: className, suffix = "" } = Astro.props;
const ageText = formatRelativeAge(value);
const text = ageText === "-" ? ageText : `${ageText}${suffix}`;
---

<span class={cn(className)} title={tooltip}>{text}</span>
