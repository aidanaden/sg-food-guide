{
  "name": "sg-food-guide",
  "private": true,
  "packageManager": "bun@1.3.3",
  "workspaces": {
    "packages": [
      "apps/*",
      "libs/*",
      "configs/*"
    ],
    "catalogs": {
      "ui": {
        "react": "19.2.0",
        "react-dom": "19.2.0",
        "@types/react": "19.2.2",
        "@types/react-dom": "19.2.2",
        "tailwindcss": "4.1.18",
        "@tailwindcss/vite": "4.1.18",
        "@base-ui/react": "1.2.0",
        "@iconify/tailwind4": "1.2.1",
        "@dnd-kit/core": "6.3.1",
        "@dnd-kit/sortable": "10.0.0",
        "@dnd-kit/utilities": "3.2.2",
        "class-variance-authority": "0.7.1",
        "clsx": "2.1.1",
        "motion": "12.33.0",
        "react-day-picker": "9.13.1",
        "tailwind-merge": "3.4.0",
        "tw-animate-css": "1.4.0",
        "virtua": "0.48.5",
        "lucide-react": "0.545.0"
      },
      "tanstack": {
        "@tanstack/react-devtools": "0.7.0",
        "@tanstack/react-query": "5.84.2",
        "@tanstack/react-query-devtools": "5.84.2",
        "@tanstack/react-router": "1.132.0",
        "@tanstack/react-router-devtools": "1.132.0",
        "@tanstack/react-router-ssr-query": "1.131.7",
        "@tanstack/react-start": "1.132.0",
        "@tanstack/start-storage-context": "1.132.0",
        "@tanstack/router-plugin": "1.132.0",
        "@tanstack/router-generator": "1.132.0",
        "@tanstack/devtools-vite": "0.3.11"
      },
      "api": {
        "@cloudflare/vite-plugin": "1.13.8",
        "wrangler": "4.63.0"
      },
      "toolkit": {
        "zod": "4.3.6",
        "better-result": "2.7.0",
        "date-fns": "4.1.0"
      },
      "dev": {
        "@types/node": "22.10.2",
        "typescript": "5.9.3",
        "vite": "6.4.1",
        "@vitejs/plugin-react": "5.0.4",
        "vite-tsconfig-paths": "5.1.4",
        "vitest": "3.0.5",
        "oxfmt": "0.28.0",
        "oxlint": "1.43.0",
        "oxlint-tsgolint": "0.12.2",
        "turbo": "2.8.3"
      }
    }
  },
  "scripts": {
    "dev": "turbo run dev --filter=@sg-food-guide/web",
    "dev:local": "bun --filter @sg-food-guide/web dev -- --port 4330",
    "dev:tunnel": "bun ./scripts/dev-tunnel.ts",
    "dev:expose": "bun run dev:tunnel",
    "build": "turbo run build",
    "typecheck": "turbo run typecheck",
    "lint:check": "turbo run lint:check",
    "lint:fix": "turbo run lint:fix",
    "format:check": "oxfmt --check .",
    "format:fix": "oxfmt .",
    "test": "turbo run test",
    "check": "bun ./scripts/check-color-opacity.ts && turbo run check",
    "ci": "turbo run ci",
    "track:sheet": "bun --filter @sg-food-guide/web track:sheet",
    "populate:youtube-ids": "bun --filter @sg-food-guide/web populate:youtube-ids",
    "preview": "bun --filter @sg-food-guide/web preview",
    "deploy": "bun --filter @sg-food-guide/web deploy"
  },
  "devDependencies": {
    "oxfmt": "catalog:dev",
    "oxlint": "catalog:dev",
    "oxlint-tsgolint": "catalog:dev",
    "turbo": "catalog:dev",
    "typescript": "catalog:dev",
    "wrangler": "catalog:api"
  }
}
