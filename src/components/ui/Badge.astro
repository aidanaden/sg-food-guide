---
interface Props {
  variant: 'rating-0' | 'rating-1' | 'rating-2' | 'rating-3' | 'award' | 'cuisine' | 'area' | 'time';
  size?: 'sm' | 'md';
  class?: string;
}

const { variant, size = 'sm', class: className } = Astro.props;

const variants: Record<string, string> = {
  'rating-0': 'bg-warm-700/15 border-warm-600/30 text-ink-muted',
  'rating-1': 'bg-flame-400/15 border-flame-400/30 text-flame-400',
  'rating-2': 'bg-gold-400/15 border-gold-400/30 text-gold-400',
  'rating-3': 'bg-jade-400/15 border-jade-400/30 text-jade-400',
  'award': 'bg-gold-600/20 border-gold-500/25 text-gold-400',
  'cuisine': 'bg-flame-500/10 border-flame-500/20 text-flame-400',
  'area': 'bg-warm-700/30 border-warm-600/30 text-ink-muted',
  'time': 'bg-warm-700/20 border-warm-600/20 text-ink-muted',
};

const sizes: Record<string, string> = {
  sm: 'px-2.5 py-1 text-xs',
  md: 'px-3 py-1.5 text-sm',
};
---

<span
  class:list={[
    'inline-flex items-center gap-1.5 rounded-md border font-medium',
    variants[variant],
    sizes[size],
    className,
  ]}
>
  <slot />
</span>
