---
interface Props {
  title: string;
  description?: string;
  ogType?: 'website' | 'article';
  canonicalPath?: string;
}

const siteUrl = 'https://sg-food-guide.pages.dev';
const { title, description = 'The definitive guide to Singapore\'s best hawker food — 170+ stalls ranked, mapped, and reviewed across 10 cuisines.', ogType = 'website', canonicalPath } = Astro.props;
const canonicalUrl = canonicalPath ? `${siteUrl}${canonicalPath}` : undefined;
---

<!doctype html>
<html lang="en" class="bg-surface text-ink antialiased">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content={ogType} />
    <meta property="og:site_name" content="SG Food Guide" />
    <meta property="og:locale" content="en_SG" />
    {canonicalUrl && <meta property="og:url" content={canonicalUrl} />}

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <!-- Canonical -->
    {canonicalUrl && <link rel="canonical" href={canonicalUrl} />}

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="theme-color" content="#1a1410" />
    <!-- Fonts are self-hosted via @fontsource (imported in global.css) -->
    <title>{title}</title>
  </head>
  <body class="min-h-screen font-sans">
    <slot />
  </body>
</html>

<style is:global>
  @import '../styles/global.css';

  /* Scrollbar — only on non-touch devices */
  @media (hover: hover) {
    ::-webkit-scrollbar { width: 8px; }
    ::-webkit-scrollbar-track { background: var(--color-surface); }
    ::-webkit-scrollbar-thumb { background: var(--color-warm-700); border-radius: 4px; }
    ::-webkit-scrollbar-thumb:hover { background: var(--color-warm-600); }
  }

  /* Selection */
  ::selection {
    background: color-mix(in srgb, var(--color-flame-500) 40%, transparent);
    color: white;
  }
</style>
