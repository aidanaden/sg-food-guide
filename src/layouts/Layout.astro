---
interface Props {
  title: string;
  description?: string;
}

const { title, description = 'The definitive guide to the best Hokkien Mee in Singapore â€” ranked, mapped, and reviewed.' } = Astro.props;
---

<!doctype html>
<html lang="en" class="bg-surface text-ink antialiased">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Bricolage+Grotesque:opsz,wght@12..96,400;12..96,600;12..96,700;12..96,800&family=DM+Sans:ital,opsz,wght@0,9..40,400;0,9..40,500;0,9..40,600;0,9..40,700;1,9..40,400&family=JetBrains+Mono:wght@400;500&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body class="min-h-screen font-sans">
    <slot />
  </body>
</html>

<style is:global>
  @import '../styles/global.css';

  /* Scrollbar */
  ::-webkit-scrollbar { width: 8px; }
  ::-webkit-scrollbar-track { background: var(--color-surface); }
  ::-webkit-scrollbar-thumb { background: var(--color-warm-700); border-radius: 4px; }
  ::-webkit-scrollbar-thumb:hover { background: var(--color-warm-600); }

  /* Selection */
  ::selection {
    background: color-mix(in srgb, var(--color-flame-500) 40%, transparent);
    color: white;
  }
</style>
