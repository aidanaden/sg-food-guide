{
  "$schema": "https://turborepo.dev/schema.v2.json",
  "tasks": {
    "transit": {
      "dependsOn": ["^transit"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".output/**", ".next/**"],
      "inputs": ["$TURBO_DEFAULT$", "!**/*.test.{ts,tsx}", "!**/*.md"],
      "env": ["VITE_*"]
    },
    "typecheck": {
      "dependsOn": ["transit"],
      "outputs": []
    },
    "lint:check": {
      "dependsOn": ["transit"],
      "inputs": ["$TURBO_DEFAULT$", "!**/*.test.{ts,tsx}", "!**/*.md"],
      "outputs": []
    },
    "lint:fix": {
      "dependsOn": ["transit"],
      "cache": false
    },
    "test": {
      "dependsOn": ["transit"]
    },
    "check": {
      "dependsOn": ["transit"],
      "outputs": []
    },
    "ci": {
      "dependsOn": ["transit"],
      "outputs": []
    },
    "track:sheet": {
      "outputs": ["apps/web/data/source/**"]
    },
    "populate:youtube-ids": {
      "outputs": ["apps/web/src/data/**"]
    },
    "preview": {
      "cache": false,
      "persistent": true
    },
    "deploy": {
      "cache": false
    },
    "routes:gen": {
      "outputs": []
    }
  }
}
